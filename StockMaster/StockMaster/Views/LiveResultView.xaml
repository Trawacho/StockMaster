<Window x:Class="StockMaster.Views.LiveResultView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockMaster.Views"
        xmlns:co="clr-namespace:StockMaster.Converter"
        xmlns:mo="clr-namespace:StockMaster.Models"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=mo:LiveResultViewModel, IsDesignTimeCreatable=False}" 
        Title="LiveResultView" Height="450" Width="800">

    <Window.Resources>
        <co:TupleValue_Team_Converter x:Key="TVC"/>
    </Window.Resources>

    <DockPanel>
        <Button Content="OK" 
                DockPanel.Dock="Top"
                Command="{Binding OkCommand}"
                Margin="10" Padding="10"/>

        <Viewbox DockPanel.Dock="Top">
            <DataGrid ItemsSource="{Binding Path=Ergebnisliste, Mode=OneWay}"
                      RowHeaderWidth="0"
                      Margin="5"
                      AutoGenerateColumns="False">
                <DataGrid.Columns >
                    <DataGridTextColumn Header="Platz" 
                                    Binding="{Binding Converter={StaticResource TVC},
                                                                     ConverterParameter=Platzierung}"/>
                    <DataGridTextColumn Header="Name" 
                                    Binding="{Binding Converter={StaticResource TVC}, 
                                                      ConverterParameter=TeamName}"
                                    Foreground="Black"/>
                    <DataGridTextColumn Header="Punkte" 
                                    Binding="{Binding Converter={StaticResource TVC},
                                                                      ConverterParameter=SpielPunkte}"/>
                    <DataGridTextColumn Header="Stockpunkte" 
                                    Binding="{Binding Converter={StaticResource TVC},
                                                                         ConverterParameter=StockPunkte}"/>
                    <DataGridTextColumn Header="Stocknote" 
                                    Binding="{Binding Converter={StaticResource TVC},
                                                                         ConverterParameter=StockNote}"/>
                    <DataGridTextColumn Header="Differenz" 
                                    Binding="{Binding Converter={StaticResource TVC},
                                                                         ConverterParameter=StockPunkteDifferenz}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Viewbox>
    </DockPanel>
</Window>

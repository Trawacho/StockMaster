<Window x:Class="StockMaster.Views.LiveResultView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockMaster.Views"
        xmlns:co="clr-namespace:StockMaster.Converters"
        xmlns:mo="clr-namespace:StockMaster.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance 
                            Type=mo:LiveResultDesignViewModel, 
                            IsDesignTimeCreatable=True}" 
        Title="Live-Ergebnis" 
        FontFamily="Verdana"
        WindowStyle="ToolWindow"
        >

    <Window.Resources>
        <co:TupleValue_Team_Converter x:Key="TVC"/>

        <Style x:Key="CenterAligned" TargetType="DataGridCell">
            <Style.Setters>
                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                <Setter Property="BorderThickness" Value="0"/>
            </Style.Setters>
        </Style>
        <Style x:Key="TeamNameStyle" TargetType="DataGridCell">
            <Style.Setters>
                <Setter Property="TextBlock.TextAlignment" Value="Left" />
                <Setter Property="TextBlock.Margin" Value="0" />
                <Setter Property="BorderBrush" Value="Red"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Margin" Value="0"/>
            </Style.Setters>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>


        <Viewbox VerticalAlignment="Top" Margin="10" Grid.Row="0" HorizontalAlignment="Stretch">

            <DataGrid ItemsSource="{Binding Path=Ergebnisliste, Mode=OneWay}"
                      RowHeaderWidth="0"
                      Margin="0"
                      CanUserSortColumns="False"
                      AutoGenerateColumns="False"
                      >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Platz"
                                    Binding="{Binding Converter={StaticResource TVC},
                                                                     ConverterParameter=Platzierung}"/>
                    <DataGridTextColumn Header="Name" 
                                        CellStyle="{StaticResource TeamNameStyle}"
                                        Binding="{Binding Converter={StaticResource TVC}, 
                                                      ConverterParameter=TeamName}"
                                        Foreground="Black"/>


                    <DataGridTextColumn Header="Punkte" CellStyle="{StaticResource CenterAligned}" 
                                    Binding="{Binding Converter={StaticResource TVC},
                                                                      ConverterParameter=SpielPunkte}"/>
                    <DataGridTextColumn Header="Stockpunkte" CellStyle="{StaticResource CenterAligned}" 
                                    Binding="{Binding Converter={StaticResource TVC},
                                                                         ConverterParameter=StockPunkte}"/>
                    <DataGridTextColumn Header="Stocknote" CellStyle="{StaticResource CenterAligned}" 
                                    Binding="{Binding Converter={StaticResource TVC},
                                                                         ConverterParameter=StockNote}"/>
                    <DataGridTextColumn Header="Differenz" CellStyle="{StaticResource CenterAligned}" 
                                    Binding="{Binding Converter={StaticResource TVC},
                                                                         ConverterParameter=StockPunkteDifferenz}"/>
                </DataGrid.Columns>
            </DataGrid>

        </Viewbox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            
            <Button Content="Refresh"
                Command="{Binding Path=RefreshCommand}"
                Margin="10" Padding="10"/>
            <Button Content="Close" 
                Command="{Binding Path=CloseCommand}"
                Margin="10" Padding="10" />

        </StackPanel>

    </Grid>
</Window>
